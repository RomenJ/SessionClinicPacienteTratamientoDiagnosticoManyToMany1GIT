{% extends 'base.html.twig' %}

{% block title %}Paciente{% endblock %}

{% block body %}
    <h1>Historial Tratamientos y Diagnósticos del Paciente</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ paciente.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ paciente.name }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ paciente.telephone }}</td>
            </tr>
<tr>
                <th>Diagnóstico</th>


                 <td>
            {% for diagnostico in paciente.diagnosticos %}
              {{ diagnostico.name }}
              {% if not loop.last %}, {% endif %}
            {% endfor %}
          </td>

</tr>


        <tr>
            <th>Tratamientos aplicados </th>
                <td>
            {% for tratamiento in paciente.tratamientos %}
              {{ tratamiento.name }}
              {% if not loop.last %}, {% endif %}
            {% endfor %}
          </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_paciente_index') }}">back to list</a>

    <a href="{{ path('app_paciente_edit', {'id': paciente.id}) }}">edit</a>

    {{ include('paciente/_delete_form.html.twig') }}
{% endblock %}
